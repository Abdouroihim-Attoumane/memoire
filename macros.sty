\geometry{top=2.5cm, bottom=2.5cm, left=2.5cm, right=2cm} % Marges personnalisées

\setlist[itemize]{label=\textbullet} % Puce des listes

\pagestyle{fancy}                                   % Style de page personnalisé
\fancyhf{}                                          % Suppression des en-têtes et pieds de page par défaut

% L'en-tête
\fancyhead[L]{\leftmark} % Titre de la section
\renewcommand{\headrulewidth}{2pt}    % Épaisseur de la ligne
\setlength{\headheight}{20pt} % Hauteur de l'en-tête
\setlength{\headsep}{20pt}    % Distance entre l'en-tête et le texte

% Modifier la couleur des lignes
\makeatletter
\renewcommand{\headrule}{\color{blue}\hrule width\headwidth height\headrulewidth \vskip-\headrulewidth}
\makeatother

% Le pied de page
\fancyfoot[L]{ABDOUROIHIM Attoumane} % Nom de l'auteur
\fancyfoot[C]{UCAD-FST-IMN} % Nom de l'établissement
\fancyfoot[R]{\thepage}        % Numéro de page
\renewcommand{\footrulewidth}{2pt}    % Épaisseur de la ligne
\setlength{\footskip}{40pt}   % Distance entre le texte et le pied de page

% Espacement entre les lignes
\hyphenpenalty=10000
\tolerance=10000

% Commande pour tracer une ligne horizontale
\newcommand{\HRule}{\noindent\textcolor{bleufonce}{\rule{16cm}{0.5mm}}}

% Définition des couleurs
\definecolor{bleufonce}{RGB}{0, 0, 150} % Bleu foncé 

\renewcommand{\lstlistingname}{Code}       % Change "Listing" en "Code"
\renewcommand{\lstlistlistingname}{Table des codes}  % Titre de la table des codes

\setcounter{tocdepth}{2} % Profondeur de la table des matières (1 pour sections, 2 pour sous-sections, etc.)

\usetikzlibrary{shadows} % Ombres
\setlength{\parskip}{12pt} % Espacement des paragraphes
\setlength{\parindent}{12pt} % Indentation des paragraphes